{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "baseUrl": ".",
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["bun-types"],
    "paths": {
      "@common/*": ["common/*"],
      "@server/*": ["server/src/*"],
      "@client/*": ["client/src/*"]
    }
  },
  "exclude": ["**/node_modules", "**/dist", "**/.eslintrc.js"],
  "files": [],
  "references": [
    {
      "path": "./client"
    },
    {
      "path": "./server"
    },
    {
      "path": "./common"
    }
  ]
}
