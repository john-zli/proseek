{
  "name": "proseek-server",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "clean-install": "rm -rf ./node_modules && bun install",
    "dev": "doppler run -- bun run --bun ./src/web-server",
    "dev:hot": "bun run --bun nodemon --exec \"bun run dev\" --watch ./src --ext .ts",
    "lint": "bun run --bun eslint .",
    "start": "NODE_ENV=production bun run --bun ./dist",
    "test": "bun test",
    "test:hot": "bun run --bun nodemon --exec \"bun test\" --watch ./src --ext .ts",
    "type-check": "bun run --bun tsc --noEmit",
    "build": "bun build ./src/web-server/index.ts --outdir ./dist --target node"
  },
  "engines": {
    "bun": ">=1.0.0"
  },
  "dependencies": {
    "@cap.js/server": "^1.0.9",
    "@types/bcrypt": "^5.0.2",
    "@types/express-session": "^1.18.1",
    "@types/geoip-lite": "^1.4.4",
    "bcrypt": "^5.1.1",
    "bullmq": "^5.53.2",
    "connect-redis": "^8.0.3",
    "cookie-parser": "^1.4.7",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "express-async-errors": "^3.1.1",
    "express-session": "^1.18.1",
    "geoip-lite": "^1.4.10",
    "helmet": "^8.1.0",
    "module-alias": "^2.2.3",
    "morgan": "^1.10.0",
    "node-fetch": "^3.3.2",
    "node-geocoder": "^4.4.1",
    "pg": "8.14.1",
    "pino": "9.6.0",
    "pino-pretty": "13.0.0",
    "redis": "^4.7.0",
    "uuid": "^9.0.1",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.22.0",
    "@stylistic/eslint-plugin-js": "^4.2.0",
    "@stylistic/eslint-plugin-ts": "^4.2.0",
    "@swc/core": "^1.11.11",
    "@types/bun": "latest",
    "@types/cookie-parser": "^1.4.8",
    "@types/eslint": "^9.6.1",
    "@types/express": "^5.0.0",
    "@types/jsonfile": "^6.1.4",
    "@types/module-alias": "^2.0.4",
    "@types/morgan": "^1.9.9",
    "@types/node": "^22.13.10",
    "@types/pg": "8.11.11",
    "@types/pino": "7.0.5",
    "@types/uuid": "^9.0.8",
    "@typescript-eslint/eslint-plugin": "^8.31.0",
    "@typescript-eslint/parser": "^8.31.0",
    "bun-types": "^1.2.15",
    "eslint": "^9.25.1",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-n": "^17.16.2",
    "eslint-plugin-react-hooks": "^5.2.0",
    "nodemon": "^3.1.9",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.8.2",
    "typescript-eslint": "^8.26.1"
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write"
    ]
  }
}