  "compilerOptions": {
    "composite": true,
    "outDir": "./dist",
    "rootDir": "..",
    "typeRoots": [
      "./src/types",
      "./node_modules/@types"
    ],
    "types": [
      "bun-types"
    ]
  },
  "include": [
    "src/**/*",
    "../common/**/*",
    "src/**/*.test.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}